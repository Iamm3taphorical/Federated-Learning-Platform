# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/federated_medical
DATABASE_ASYNC_URL=postgresql+asyncpg://postgres:password@localhost:5432/federated_medical

# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8000
FL_SERVER_ADDRESS=0.0.0.0:8080
NUM_ROUNDS=10
MIN_CLIENTS=2
FRACTION_FIT=1.0
FRACTION_EVALUATE=1.0

# Privacy Configuration
ENABLE_DP=true
TARGET_EPSILON=8.0
TARGET_DELTA=1e-5
MAX_GRAD_NORM=1.0
NOISE_MULTIPLIER=1.1

# Secure Aggregation
ENABLE_SECURE_AGG=false

# Authentication
SECRET_KEY=your-super-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Model Configuration
DEFAULT_MODEL_ARCHITECTURE=MedicalCNN
DEFAULT_MODALITY=xray
LOCAL_EPOCHS=1
BATCH_SIZE=32
LEARNING_RATE=0.001
